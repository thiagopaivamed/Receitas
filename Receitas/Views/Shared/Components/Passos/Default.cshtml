@model IEnumerable<Receitas.Models.Passo>

@{
    Layout = null;
}

@if (Model.Count() == 0)
{
    <div class="alert alert-warning">
        <span>Sem passos ainda</span>
    </div>
}
else
{
    <ul class="list-group">
        @foreach (var item in Model)
        {
            <li class="list-group-item @item.PassoId">
                <div class="row">
                    <div class="col-8">
                        @Html.DisplayFor(modelItem => item.Descricao)
                    </div>

                    <div class="col-4">

                        <a asp-controller="Passos" asp-action="AtualizarPasso" asp-route-passoId="@item.PassoId" class="btn btn-primary btn-sm rounded-circle">
                            <i class="fa fa-pencil-square-o"></i>
                        </a>

                        <a style="color:white;cursor:pointer" class="btn btn-danger btn-sm rounded-circle" onclick="Excluir(@item.PassoId, 'Passos')">
                            <i class="fa fa-times-circle"></i>
                        </a>
                    </div>
                </div>
            </li>
        }
    </ul>
}