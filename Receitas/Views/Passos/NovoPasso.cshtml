@model Receitas.Models.Passo

@{
    ViewData["Title"] = "Novo Passo";
}

<div class="border border-light rounded-lg p-5 shadow">
    <h6>Nova Passo</h6>
    <hr />
    <div class="row">
        <div class="col-md-4">
            <form asp-action="NovoPasso">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Descricao" class="col-form-label col-form-label-sm"></label>
                    <input asp-for="Descricao" class="form-control form-control-sm" />
                    <span asp-validation-for="Descricao" class="text-danger"></span>
                </div>

                <input asp-for="ReceitaId" hidden/>

                <div class="form-group">
                    <input type="submit" value="Salvar" class="btn btn-outline-success btn-sm" />
                    <a asp-action="Index" class="btn btn-light btn-sm">Voltar</a>
                </div>
            </form>
        </div>
    </div>
</div>